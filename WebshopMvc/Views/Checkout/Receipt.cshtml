@model ShopDAL.DomainModel.Order

@{
    ViewBag.Title = "Receipt";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="invoice-title">
                <h2>Ordrebekræftelse</h2><h3 class="pull-right">Order @Model.OrderId</h3>
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-6">
                    <address>
                        <strong>Faktureret til:</strong><br>
                        @Model.FirstName @Model.LastName<br>
                        @Model.Address<br>
                        @Model.City - @Model.PostalCode<br>
                        @Model.Country
                    </address>
                </div>
                <div class="col-xs-6 text-right">
                    <address>
                        <strong>Leveringsadresse:</strong><br>
                        @Model.FirstName @Model.LastName<br>
                        @Model.Address<br>
                        @Model.City - @Model.PostalCode<br>
                        @Model.Country
                    </address>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <address>
                        <strong>Payment Method:</strong><br>
                        Visa ending **** 4242<br>
                        jsmith@email.com
                    </address>
                </div>
                <div class="col-xs-6 text-right">
                    <address>
                        <strong>Order Date:</strong><br>
                        @Model.OrderDate<br><br>
                    </address>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Ordre detaljer</strong></h3>
                </div>
                <div class="panel-body">
                    @{ List<decimal> summs = new List<decimal>(); }
                    <div class="table-responsive">
                        <table class="table table-condensed">

                            <thead>
                                <tr>
                                    <td><strong>Product</strong></td>
                                    <td class="text-center"><strong>Pris</strong></td>
                                    <td class="text-center"><strong>Kvantitet</strong></td>
                                    <td class="text-right"><strong>Sum</strong></td>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- foreach ($order->lineItems as $line) or some such thing here -->
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@item.Product.Type</td>
                                        <td class="text-center">@item.UnitPrice</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-right">@(item.UnitPrice * item.Quantity)</td>
                                    </tr>

                                    summs.Add(item.UnitPrice * item.Quantity);

                                }



                            </tbody>
                        </table>

                    </div>
                    <div><h3>Total:</h3></div><div>@summs.Sum()</div>

                </div>
            </div>
        </div>
    </div>
</div>